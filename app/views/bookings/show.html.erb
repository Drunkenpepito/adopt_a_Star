<div class="container padded">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <% if @cocktail.photos.size != 0 %>
        <% picture_url = cl_image_path @cocktail.photos[0].path %>
      <% else %>
        <% picture_url = image_path('background.jpg') %>
      <% end %>
    <%= render "card", cocktail: @cocktail, picture_url: picture_url %>
      <br><br>
      <div class="formulaire">
        <%= simple_form_for([ @cocktail, @dose ]) do |form| %>
          <%= form.association :ingredient %>
          <%= form.input :description %>
          <%= form.button :submit, class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= link_to "destroy cocktail", cocktail_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" },
      class: "btn btn-danger rounded" %>
