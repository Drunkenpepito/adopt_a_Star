
<div class="filter">
    <%= link_to "City", "#", class: "btn btn-ghost" %>
    <%= link_to "Category", "#", class: "btn btn-ghost" %>
    <%= link_to "Price", "#", class: "btn btn-ghost" %>
    <%= link_to "Gender", "#", class: "btn btn-ghost" %>
    <%= link_to "Size", "#", class: "btn btn-ghost" %>
</div>

<div id ='container-index'>

  <div id = 'flex-index'>
    <% @stars.each do |star| %>
        <div class="card-product">
          <img src="<%= cl_image_path star.photo.key, height: 300, width: 400, crop: :fill %>" />
          <div class="card-product-infos">
            <h2><%= link_to star.name, star_path(star), data: { turbolinks: false } %></h2>
            <p><%= star.category %></p>
          </div>
        </div>
    <% end %>
  </div>

  <div id='map'
    style="width: 40%;
    height: 100vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

  </div>

</div>




