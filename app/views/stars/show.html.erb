<div class="banner-edit-or-delete">
    <div>
      <%= link_to "Edit", edit_star_path %>
      <%= link_to "", star_path, method: :delete, data: {:confirm => 'Are you sure?'}, :class => "far fa-trash-alt" %>
    </div>
</div>


<div class = "container mt-4">

  <h1><%= @star.name %></h1>`
  <div class = "container-star">

    <div id="carouselExampleIndicators" class="carousel slide w-50 p-3" data-ride="carousel">
      <ol class="carousel-indicators">
        <% @star.photos.each_with_index do |photo, i| %>
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="<%= 'active' if i == 0 %>"></li>
        <% end %>
      </ol>
      <div class="carousel-inner">
        <% @star.photos.each_with_index do |photo, i| %>
          <div class="carousel-item <%= 'active' if i == 0 %>">
            <img class="d-block w-100" src="<%= cl_image_path photo.key, height: 300, width: 400, crop: :fill %>" alt="First slide">
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <div class ="box">
      <h2>Description</h2>
      <ul>
        <li>Category : <%= @star.category %></li>
        <li>City : <%= @star.city %></li>
        <li>Gender : <%= @star.gender %></li>
        <li>Size : <%= @star.size %></li>
        <li>Price : <%= @star.price %>‚Ç¨</li>
      </ul>
    </div>
  </div>


    <div class ="box-booking">
      <h5>Let's book your star üòç</h2>
      <div class="container padded">
        <div class="row">

          <div class="col-xs-10 col-xs-offset-1">

            <%= simple_form_for [@star, @booking] do |f| %>
              <%= f.error_notification %>
              <%= f.input :from %>
              <%= f.input :to %>

              <div class="btn-nav">
                <input type="submit" name="commit" value="Book this star" class="btn-nav" data-disable-with="Book this star" style="border: none !important; color: hotpink; z-index: 5;">
                  <svg width="277" height="62">
                    <defs>
                        <linearGradient id="grad1">
                            <stop offset="0%" stop-color="#FF8282"/>
                            <stop offset="100%" stop-color="#E178ED" />
                        </linearGradient>
                    </defs>
                     <rect x="5" y="5" rx="25" fill="none" stroke="url(#grad1)" width="266" height="50"></rect>
                  </svg>
              </div>
            <% end %>
          </div>

        </div>
      </div>
    </div>


  <h3 class ="mt-4">Reviews</h3>

</div>
