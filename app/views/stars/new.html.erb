<div class= "container col-5">

  <h1>Create your star</h1>
  <div class="form">
    <%= simple_form_for(@star) do |f| %>
      <%= f.input :name %>
      <%= f.input :city %>
      <%= f.input :category %>
      <%= f.input :price %>
      <%= f.input :sex %>
      <%= f.input :size %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.button :submit, class: "btn btn-gradient"%>
    <% end %>
  </div>
    <div class="flash flash-warning alert alert-dismissible fade show" role="alert">
  <span><strong></strong> ☝🏽 Don't forget to insert a file <a href="#"></a> </span>
  <a data-dismiss="alert" aria-label="Close">
    <i class="fas fa-times"></i>
  </a>
</div>
