<div class= "container col-5">

  <h1>Create your star</h1>
  <div class="form">
    <%= simple_form_for(@star) do |f| %>
      <%= f.input :name %>
      <%= f.input :city %>
      <%= f.input :category %>
      <%= f.input :price, as: :range %>
      <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
      <%= f.input :gender, collection: ["Male", "Female", "Other"]%>
      <%= f.input :size, label: "Size (cm)", collection: 120..220%>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.button :submit, class: "btn btn-gradient"%>
    <% end %>
  </div>
    <div class="flash flash-warning alert alert-dismissible fade show" role="alert">
  <span><strong></strong> ☝🏽 Don't forget to insert a file <a href="#"></a> </span>
  <a data-dismiss="alert" aria-label="Close">
    <i class="fas fa-times"></i>
  </a>
</div>
