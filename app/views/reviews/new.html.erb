<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @star.photos.first.key %>');">
  <h1> How was it with <%= @star.name %> ?</h1>
  <div style="color:white;" class="container padded">
        <%= simple_form_for([@booking, @review]) do |f| %>
          <%= f.error_notification %>
          <%= f.input :note , collection: 0..5%>
          <%= f.hidden_field :star, value: @star %>
          <%= f.input :description, :input_html => {:rows => 4}  %>
          <%= f.button :submit, class: "btn btn-flat" %>
        <% end %>
  </div>
</div>
