<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style="z-index: 5;">
  <%= link_to stars_path, class: "navbar-brand", data: { turbolinks: false } do %>
    <%= image_tag "logo.png", alt: "Mon image", width: 64, height: 64 %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <%= form_tag stars_path, method: :get do %>
    <div class="search-form-control form-group">
      <%= text_field_tag :query, params[:query], class:"form-control string required", id:"search_name"%>
      <!-- <input class="form-control string required" type="text" name="search[name]" id="search_name" /> -->
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar-large dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "avatar_default.png", alt: "Mon image", width: 64, height: 64, id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
          <% end  %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Add a Star", new_star_path, class: "dropdown-item" %>
            <%= link_to "My bookings", bookings_path, class: "dropdown-item" %>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <%= link_to "Edit profile",  edit_user_registration_path, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <div id="connection">
          <div>
            <%= link_to "Connection", new_user_session_url %>
          </div>
          <div>
            <%= link_to "Sign Up", new_user_registration_path %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

